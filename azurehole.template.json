{
   "$schema":"https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
   "contentVersion":"1.0.0.0",
   "parameters":{
      "location":{
         "type":"string"
      },
      "containerName":{
         "type":"string",
         "defaultValue": "pihole",
         "metadata": {
            "description": "Name of the Container"
          }
      },
      "imageName":{
         "type":"string",
         "defaultValue": "pihole/pihole:latest",
         "allowedValues":["pihole/pihole:latest"],
         "metadata": {
            "description": "Pihole container image"
          }
      },
      "timeZone":{
         "type":"string",
         "defaultValue": "Europe/Oslo",
         "metadata": {
            "description": "Time Zone"
          }
      },
      "webPassword":{
         "type":"securestring",
         "metadata": {
            "description": "Paasowrd for the web admin login"
          }
      },
      "numberCpuCores":{
         "type":"string",
         "defaultValue": "1",
         "metadata": {
            "description": "Number of CPU Cores"
          }
      },
      "memory":{
         "type":"string",
         "defaultValue": "1",
         "metadata": {
            "description": "Memory size in GB"
          }
      },
      "restartPolicy":{
         "type":"string",
         "defaultValue": "OnFailure",
         "allowedValues":[
            "OnFailure",
            "Always",
            "Never"
         ],
         "metadata": {
            "description": "Container restart policy"
          }
      },
      "dnsNameLabel":{
         "type":"string",
         "metadata": {
            "description": "Unique domian name"
          }
      },
      "storageAccountName": {
         "type":"string"
     },
     "storageAccountKey": {
      "type":"string"
   },
      "etcPihole":{
         "type":"string",
         "defaultValue": "pihole-etc-pihole",
         "allowedValues":["pihole-etc-pihole"],
         "metadata": {
            "description": "Pihole settings"
          }
      },
      "etcDnsmasq": {
         "type": "string",
         "defaultValue": "pihole-etc-dnsmasq",
         "allowedValues":["pihole-etc-pihole"],
         "metadata": {
           "description": "Dnsmasq settings"
         }
       }
   },
   "resources":[
      {
         "location":"[parameters('location')]",
         "name":"[parameters('containerName')]",
         "type":"Microsoft.ContainerInstance/containerGroups",
         "apiVersion":"2018-10-01",
         "properties":{
            "volumes":[
               {
                  "name":"vpihole",
                  "azureFile":{
                     "shareName":"[parameters('etcPihole')]",
                     "storageAccountName":"[parameters('storageAccountName')]",
                     "storageAccountKey":"[parameters('storageAccountKey')]"
                  }
               },
               {
                  "name":"vdnsmasq",
                  "azureFile":{
                     "shareName":"[parameters('etcDnsmasq')]",
                     "storageAccountName":"[parameters('storageAccountName')]",
                     "storageAccountKey":"[parameters('storageAccountKey')]"
                  }
               }
            ],
            "containers":[
               {
                  "name":"[parameters('containerName')]",
                  "properties":{
                     "image":"[parameters('imageName')]",
                     "resources":{
                        "requests":{
                           "cpu":"[int(parameters('numberCpuCores'))]",
                           "memoryInGB":"[float(parameters('memory'))]"
                        }
                     },
                     "ports": [
                        {
                           "port": "53",
                           "protocol": "UDP"
                        },
                        {
                           "port": "67",
                           "protocol": "UDP"
                        },
                        {
                           "port": "80",
                           "protocol": "TCP"
                        },
                        {
                           "port": "443",
                           "protocol": "TCP"
                        }
                     ],
                     "environmentVariables": [
                           {
                           "name": "TZ",
                           "value": "[parameters('timeZone')]"
                           },
                           {
                              "name": "WEBPASSWORD",
                              "value": "[parameters('webPassword')]"
                           }
                     ],
                     "volumeMounts":[
                        {
                           "name":"vpihole",
                           "mountPath":"/etc/pihole/"
                        },
                        {
                           "name":"vdnsmasq",
                           "mountPath":"/etc/dnsmasq.d/"
                        }
                     ]
                  }
               }
            ],
            "restartPolicy":"[parameters('restartPolicy')]",
            "osType":"linux",
            "ipAddress":{
               "type":"Public",
               "ports":[
                        {
                           "port": "53",
                           "protocol": "UDP"
                        },
                        {
                           "port": "67",
                           "protocol": "UDP"
                        },
                        {
                           "port": "80",
                           "protocol": "TCP"
                        },
                        {
                           "port": "443",
                           "protocol": "TCP"
                        }
                     ],
               "dnsNameLabel":"[parameters('dnsNameLabel')]"
            }
         },
         "tags":{

         }
      }
   ],
   "outputs": {
      "Web Admin Password" : {
        "type" : "string",
        "value": "[parameters('webPassword')]"
      }
    }
    
}